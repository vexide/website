---
const { title = "" } = Astro.props;
---

<header class="navigation">
	<nav class="navigation-inner">
		{
			title && (
				<a href="/" class="navigation-title">
					<slot name="logo" />
					<span>{title}</span>
					<slot name="title" />
				</a>
			)
		}
		<ul class="navigation-items">
			<slot />
		</ul>
		{
			Astro.slots.has("actions") && (
				<div class="navigation-actions">
					<slot name="actions" />
				</div>
			)
		}
		<slot name="right" />
		<details class="mobile-navigation">
			<summary class="mobile-navigation-button">
				<svg
					class="navigation-menu-icon"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 32 32"
				>
					<rect x="4" y="6" width="24" height="2"></rect>
					<rect x="4" y="24" width="24" height="2"></rect>
					<rect x="4" y="12" width="24" height="2"></rect>
					<rect x="4" y="18" width="24" height="2"></rect>
				</svg>
				<svg
					class="navigation-close-icon"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 32 32"
				>
					<polygon
						points="17.4141 16 24 9.4141 22.5859 8 16 14.5859 9.4143 8 8 9.4141 14.5859 16 8 22.5859 9.4143 24 16 17.4141 22.5859 24 24 22.5859 17.4141 16"
					></polygon>
				</svg>
				<div class="mobile-navigation-backdrop"></div>
			</summary>
			<div class="mobile-navigation-flyout">
				<ul class="mobile-navigation-items">
					<slot />

					<li class="mobile-navigation-separator" role="presentation">
						<hr />
					</li>
				</ul>
				
				<slot name="actions" />
				<slot name="mobile" />
			</div>
			
		</details>
	</nav>
</header>

<style>
	.navigation {
		background-color: var(--background-secondary);
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.13);
		flex: 0 0 auto;
		inline-size: 100%;
		block-size: fit-content;
		position: relative;
		z-index: 2;
	}

	.navigation-inner {
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-inline-size: 1280px;
		padding-inline: 48px;
		block-size: 48px;
		margin-inline: auto;
		gap: 16px;
	}

	.navigation-items {
		display: flex;
		align-items: center;
		gap: 36px;
		flex: 1 1 auto;
		margin: 0;
		padding: 0;
		list-style-type: none;
	}

	.navigation-actions {
		display: flex;
		align-items: center;
		gap: 8px;
		flex: 0 0 auto;
	}

	.navigation-title {
		margin-inline-end: 20px;
		display: flex;
		gap: 12px;
		font-weight: 600;
		font-size: 2.4rem;
		text-decoration: none;
		color: var(--foreground-primary);
		transition: 150ms ease;
	}

	.navigation-title:hover {
		opacity: 0.8;
	}

	.navigation-title:active {
		opacity: 0.6;
	}

	.navigation-title svg,
	.navigation-title img {
		inline-size: auto;
		block-size: 36px;
	}

	.mobile-navigation {
		display: none;
		user-select: none;
	}

	.mobile-navigation-button {
		cursor: pointer;
		overflow: hidden;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		inline-size: 36px;
		block-size: 36px;
		border-radius: 4px;
		color: var(--foreground-primary);
	}

	.mobile-navigation-button:hover {
		color: var(--foreground-secondary);
	}

	.mobile-navigation-button:focus {
		outline: 2px solid var(--foreground-secondary);
		outline-offset: 2px;
	}

	.mobile-navigation-button svg {
		fill: currentColor;
		inline-size: 24px;
	}

	.navigation-close-icon,
	.mobile-navigation[open] .navigation-menu-icon {
		display: none;
	}

	.mobile-navigation[open] .navigation-close-icon,
	.navigation-menu-icon {
		display: block;
	}

	.mobile-navigation-separator hr {
		margin: 0;
		border: none;
		border-bottom: 1px solid var(--background-primary);
	}

	.mobile-navigation-flyout {
		max-block-size: calc(100vh - 48px);
		overflow: auto;
		box-sizing: border-box;
		position: absolute;
		display: flex;
		flex-direction: column;
		gap: 12px;
		inline-size: 100%;
		inset-block-start: 100%;
		inset-inline-start: 0;
		margin: 0;
		padding: 16px;
		background: var(--background-primary);
		border-bottom: 1px solid var(--background-secondary);
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.13);
	}
	
	.mobile-navigation[open] .mobile-navigation-backdrop {
		position: fixed;
		cursor: default;
		top: 48px;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--background-primary);
		opacity: 0.75;
	}

	.mobile-navigation-items {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	.mobile-navigation-items li:not(:last-of-type) {
		margin-bottom: 8px;
	}

	@media screen and (max-width: 768px) {
		.navigation {
			position: sticky;
			top: 0;
		}

		:global(html) {
			scroll-padding-block-start: 72px !important;
		}

		.navigation-items,
		.navigation-actions {
			display: none;
		}

		.mobile-navigation {
			display: block;
		}

		.navigation-inner {
			padding-inline: 16px;
		}

		html:has(.mobile-navigation[open]) {
			overflow: hidden;
		}
	}

	@media screen and (max-width: 340px) {
		.navigation-title span {
			display: none;
		}
	}

</style>
